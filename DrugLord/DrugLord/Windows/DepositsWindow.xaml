<Window x:Class="DrugLord.Windows.DepositsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Windows="clr-namespace:DrugLord"
        mc:Ignorable="d"
        Title="DepositsWindow" Height="576" Width="608">
    <Window.Resources>
        <Windows:DepositsWindowMock x:Key="DesignViewModel"/>
    </Window.Resources>

    <Grid d:DataContext="{Binding Source={StaticResource DesignViewModel}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Border CornerRadius="6" BorderThickness="2" BorderBrush="Black" Margin="10" Grid.Row="0">
            <Label Content="whoa!"/>
        </Border>
        
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto">
            <ListBox ItemsSource="{Binding Depositors}" HorizontalContentAlignment="Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border CornerRadius="6" BorderThickness="2" Margin="1" BorderBrush="Black" Background="AliceBlue">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <Label Content="{Binding Name}" FontSize="16" Grid.ColumnSpan="2" Background="SlateGray" Foreground="White" FontWeight="ExtraBold"/>

                                <Label Content="Money" Grid.Row="1" Grid.Column="0"/>
                                <Border BorderThickness="2" Width="{Binding MoneyAmount}" Background="Green" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left">
                                    <Label Content="{Binding MoneyAmount}" HorizontalAlignment="Left" Foreground="White"/>
                                </Border>

                                <Label Content="Drugs" Grid.Row="2" Grid.Column="0"/>
                                <Border BorderThickness="2" Width="{Binding DrugsAmount}" Background="Red" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left">
                                    <Label Content="{Binding DrugsAmount}" HorizontalAlignment="Left" Foreground="White"/>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
    </Grid>
</Window>
