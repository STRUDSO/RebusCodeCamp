<Window x:Class="DrugDealer.LogOutputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LogOutputWindow" Height="300" Width="300">
    <Grid Margin="0,0,-329,-109">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        
        <TextBox Grid.Row="0" Text="{Binding LogText}"/>
            
        <Button Grid.Row="1" Content="Clear"/>
    </Grid>
</Window>
